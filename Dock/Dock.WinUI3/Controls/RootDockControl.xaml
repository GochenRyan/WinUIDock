                                                     Visibility="{Binding RightPinnedDockables, Mode=OneWay, Converter={StaticResource CollectionVisibilityConverter}, ConverterParameter=True}" />
                            <local:ToolPinnedControl controls:DockPanel.Dock="Top" 
                                                     Orientation="Horizontal"
                                                     ItemsSource="{Binding TopPinnedDockables}"
