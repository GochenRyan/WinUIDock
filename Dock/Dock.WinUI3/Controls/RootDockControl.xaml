<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dock.WinUI3.Controls"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls">

    <Style TargetType="local:RootDockControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:RootDockControl">
                    <local:DockableControl TrackingMode="Visible">
                        <controls:DockPanel>
                            <local:ToolPinnedControl controls:DockPanel.Dock="Left"
                                                     />
                        </controls:DockPanel>
                    </local:DockableControl>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemTemplateSelector">
            <Setter.Value>
                <local:RootTemplateSelector DocumentDockTemplate="{StaticResource DocumentDockTemplate}"/>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>
