        <Setter Property="ContentTemplateSelector">
            <Setter.Value>
                <local:RootTemplateSelector ProportionalDockTemplate="{StaticResource ProportionalDockTemplate1}" />
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>
