                                                     ItemsSource="{Binding BottomPinnedDockables}"
                                                     Visibility="{Binding BottomPinnedDockables, Mode=OneWay, Converter={StaticResource CollectionVisibilityConverter}, ConverterParameter=True}" />-->

                            <ContentPresenter/>
