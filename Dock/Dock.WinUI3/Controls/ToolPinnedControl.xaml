<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dock.WinUI3.Controls"
    xmlns:ui="using:CommunityToolkit.WinUI.UI">

    <Style TargetType="local:ToolPinnedControl" BasedOn="{StaticResource ItemsControlStyle}">
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <StackPanel ui:FrameworkElementExtensions.AncestorType="ToolPinnedControl"
                                Orientation ="{Binding (ui:FrameworkElementExtensions.Ancestor).Orientation, RelativeSource={RelativeSource Self}}"/>
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate>
                    <local:ToolPinItemControl ui:FrameworkElementExtensions.AncestorType="ToolPinnedControl"
                                              Orientation="{Binding (ui:FrameworkElementExtensions.Ancestor).Orientation, RelativeSource={RelativeSource Self}}"/>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
