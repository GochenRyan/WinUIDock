            <Setter.Value>
                <ControlTemplate TargetType="local:HostWindowControl">
                    <local:DockControl x:Name="PART_DockControl"
                                       InitializeLayout="True" 
                                       InitializeFactory="True">
                    </local:DockControl>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
