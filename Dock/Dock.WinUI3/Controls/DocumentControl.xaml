<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dock.WinUI3.Controls">

    <MenuFlyout x:Key="DocumentTabViewItemContextMenu">
        <MenuFlyoutItem Text="Float"/>
        <MenuFlyoutItem Text="Close"/>
        <MenuFlyoutItem Text="Close other tabs"/>
    </MenuFlyout>

    <Style TargetType="local:DocumentControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:DocumentControl">
                    <TabView TabItemsSource="{Binding VisibleDockables}">
                        <TabView.TabItemTemplate>
                            <DataTemplate>
                                <TabViewItem Header="{Binding Title}" 
                                             Content="{Binding Content}" 
                                             ContextFlyout="{StaticResource DocumentTabViewItemContextMenu}"/>
                            </DataTemplate>
                        </TabView.TabItemTemplate>
                    </TabView>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
